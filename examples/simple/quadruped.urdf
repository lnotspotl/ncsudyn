<robot name="quadruped_2d">

  <!-- Main Body -->
  <link name="base_link">
    <inertial>
      <mass value="1.0"/> <!-- Approximate mass of the main body -->
      <origin xyz="0 0 0"/>
      <inertia ixx="0.0025" ixy="0.0" ixz="0.0" iyy="0.0833" iyz="0.0" izz="0.0833"/>
    </inertial>
    <visual>
      <geometry>
        <box size="0.5 0.1 0.1"/>
      </geometry>
      <origin xyz="0 0 0"/>
    </visual>
  </link>

  <!-- Front Left Upper Leg -->
  <link name="front_left_upper_leg">
    <inertial>
      <mass value="0.1"/> <!-- Approximate mass of the upper leg -->
      <origin xyz="0.0 0.0 -0.15"/>
      <inertia ixx="0.0005" ixy="0.0" ixz="0.0" iyy="0.0005" iyz="0.0" izz="0.0001"/>
    </inertial>
    <visual>
      <origin xyz="0.0 0.0 -0.15"/>
      <geometry>
        <cylinder length="0.3" radius="0.02"/>
      </geometry>
    </visual>
  </link>

  <joint name="F1" type="revolute">
    <parent link="base_link"/>
    <child link="front_left_upper_leg"/>
    <origin xyz="0.25 0.0 -0.0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-12.57" upper="12.57"/>
  </joint>

  <!-- Front Left Lower Leg -->
  <link name="front_left_lower_leg">
    <inertial>
      <mass value="0.1"/> <!-- Approximate mass of the lower leg -->
      <origin xyz="0.0 0.0 -0.15"/>
      <inertia ixx="0.0005" ixy="0.0" ixz="0.0" iyy="0.0005" iyz="0.0" izz="0.0001"/>
    </inertial>
    <visual>
      <origin xyz="0.0 0.0 -0.15"/>
      <geometry>
        <cylinder length="0.3" radius="0.02"/>
      </geometry>
    </visual>
  </link>

  <joint name="F2" type="revolute">
    <parent link="front_left_upper_leg"/>
    <child link="front_left_lower_leg"/>
    <origin xyz="0 0 -0.3"/>
    <axis xyz="0 1 0"/>
    <limit lower="-12.57" upper="12.57"/>
  </joint>

  <!-- Back Left Upper Leg -->
  <link name="back_left_upper_leg">
    <inertial>
      <mass value="0.1"/> <!-- Approximate mass of the upper leg -->
      <origin xyz="0.0 0.0 -0.15"/>
      <inertia ixx="0.0005" ixy="0.0" ixz="0.0" iyy="0.0005" iyz="0.0" izz="0.0001"/>
    </inertial>
    <visual>
      <origin xyz="0.0 0.0 -0.15"/>
      <geometry>
        <cylinder length="0.3" radius="0.02"/>
      </geometry>
    </visual>
  </link>

  <joint name="R1" type="revolute">
    <parent link="base_link"/>
    <child link="back_left_upper_leg"/>
    <origin xyz="-0.25 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-12.57" upper="12.57"/>
  </joint>

  <!-- Back Left Lower Leg -->
  <link name="back_left_lower_leg">
    <inertial>
      <mass value="0.1"/> <!-- Approximate mass of the lower leg -->
      <origin xyz="0.0 0.0 -0.15"/>
      <inertia ixx="0.0005" ixy="0.0" ixz="0.0" iyy="0.0005" iyz="0.0" izz="0.0001"/>
    </inertial>
    <visual>
      <origin xyz="0.0 0.0 -0.15"/>
      <geometry>
        <cylinder length="0.3" radius="0.02"/>
      </geometry>
    </visual>
  </link>

  <joint name="R2" type="revolute">
    <parent link="back_left_upper_leg"/>
    <child link="back_left_lower_leg"/>
    <origin xyz="0 0 -0.3"/>
    <axis xyz="0 1 0"/>
    <limit lower="-12.57" upper="12.57"/>
  </joint>

</robot>